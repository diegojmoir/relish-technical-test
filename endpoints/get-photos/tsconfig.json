{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "include": ["src/**/*.ts"]
}
